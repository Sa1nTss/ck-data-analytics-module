<div class="p-2 d-flex flex-column gap-2">
    <div class="row">
        <div class="w-50">
            <label for="">Факультет</label>
            <select class="slim-select" name="faculty" id="faculty-select" multiple>
                <option value="" data-placeholder="true">Не выбрано</option>
                {% if faculties|default(false) %}
                    {% for faculty in faculties %}
                        <option value="{{ faculty.id }}">{{ faculty.name }}</option>
                    {% endfor %}
                {% endif %}
            </select>
        </div>
        <div class="w-50">
            <label for="">ВУЗ</label>
            <select class="slim-select" name="university" id="university-select" multiple>
                <option value="" data-placeholder="true">Не выбрано</option>
                {% if universities|default(false) %}
                    {% for university in universities %}
                        <option value="{{ university.id }}">{{ university.name }}</option>
                    {% endfor %}
                {% endif %}
            </select>
        </div>
    </div>
    <div class="row">
        <div class="w-50">
            <label for="">С</label>
            <input type="date" class="form-control" name="date_start">
        </div>
        <div class="w-50">
            <label for="">По</label>
            <input type="date" class="form-control" name="date_end">
        </div>
    </div>
    <div class="row">
        <div class="w-50">
            <label for="">Асессмент</label>
            <select class="form-control" name="stage" id="stage">
                <option value="">Не выбрано</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
        <div class="w-50">
            <label for="">Поток</label>
            <select class="form-control" name="flow" id="flow">
                <option value="">Не выбрано</option>
                <option value="22/23">22/23</option>
                <option value="23/24">23/24</option>
                <option value="24/25">24/25</option>
            </select>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-2">
        <button class="btn btn-primary statistic-button" data-url="{{ path('statistics_get_table') }}">
            Сформировать
        </button>
    </div>
</div>