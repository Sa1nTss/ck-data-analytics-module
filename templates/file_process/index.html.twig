{% extends 'base.html.twig' %}

{% block title %}Обработка файлов{% endblock %}

{% block body %}
    {% include 'header.html.twig' with {
        'controller': controller,
    } %}

    <div class="container-fluid">
        <h1>Загрузка Excel-файла</h1>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="d-flex gap-3">
            <div class="flex-grow-1 bg-white p-2">
                <form class="form w-75 exel-form ajax-form" action="{{ path('upload_education_excel') }}" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="excel_file">Выберите файл с данными о прохождении ассесмента:</label>
                        <input class="form-control" type="file" id="file" name="file" accept=".xls,.xlsx" required>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary" type="submit">Загрузить</button>
                    </div>
                </form>
            </div>

            <div class="flex-grow-1 bg-white p-2">
                <form class="form w-75 exel-form ajax-form" action="{{ path('upload_faculty_excel') }}" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="excel_file">Выберите файл с данными о факультетах:</label>
                        <input class="form-control" type="file" id="file" name="file" accept=".xls,.xlsx" required>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary" type="submit">Загрузить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}